{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:ext",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/vscode-ext-contextstore" },
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch:ext",
      "type": "shell",
      "command": "npm run watch",
      "options": { "cwd": "${workspaceFolder}/vscode-ext-contextstore" },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
